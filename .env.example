# Environment Variables Template
# Copy this file to .env and fill in your actual values

# REQUIRED - Session Security
SESSION_SECRET=your-super-secret-key-minimum-32-characters-change-this

# REQUIRED - WhatsApp Notifications via CallMeBot
# Get your API key from CallMeBot: https://www.callmebot.com/blog/free-api-whatsapp-messages/
CALLMEBOT_API_KEY=your-callmebot-api-key

# OPTIONAL - Email Configuration (only needed if you want email notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=info@queenvillaofficial.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=info@queenvillaofficial.com
SALES_EMAIL=info@queenvillaofficial.com

# Google Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GA4_ID=G-XXXXXXXXXX
GTM_ID=GTM-XXXXXXX

# Social Media Pixels
META_PIXEL_ID=1234567890123456
LINKEDIN_ID=1234567

# WhatsApp API Configuration (Optional)
WHATSAPP_API_TOKEN=your-whatsapp-business-api-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
CALLMEBOT_API_KEY=9250107

# Development
FLASK_ENV=development
FLASK_DEBUG=true
